{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./dist",  // output folder for compiled files
    "rootDir": "./src",

    "strict": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "src/types"] ,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
